    <div class="container" style="padding-top: 60px;">
        <h2>
            <img src="<%= user.avatar_url %>">
            Welcome, <%= user.name.split(' ')[0] %>
        </h2>
        <%NA='N/A'%>
        <% if(user.rank <= 10){ %> 
            <h3 style="color:green">Your Rank: <%=user.rank%>,&nbsp;Your Score: <%=user.score%></h3>
        <% } else { %> 

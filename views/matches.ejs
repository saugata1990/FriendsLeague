                <% let date = new Date(match.start_time_display) %>
                <% const flag1 = flags.find(flg => flg.team_name === match.team1.toLowerCase()) %>
                <% const flag2 = flags.find(flg => flg.team_name === match.team2.toLowerCase()) %>
                <% let points = 0 %>
                <div><label>Match #<%= match.match_no %>: &nbsp;
                <img src="data:image/jpg;base64,<%= flag1.flag.data %>" style="width:30px;height:30px;">
                <%= match.team1 %> vs <img src="data:image/jpg;base64,<%= flag2.flag.data %>" style="width:30px;height:30px;">
                <%= match.team2 %> </label></div>  
                <% let prediction = user.predictions.find(prd => prd.match_id == match._id) %>
                <% let timedelta = match.start_time - user.signup_timestamp %>
                <% if(timedelta < 0) { %>
                    <div>This match took place before you signed up</div>
                <% }else if(!prediction && match.winner != 'No Result') { %> 
                    <div>You failed to post for this match and received <%= process.env.no_post_penalty %> points</div>    
                <% }else if(match.winner === 'No Result'){ %>
                    <div>Match was abandoned, and hence no points were awarded. Any multipliers used were restored</div> 
                <% } else { %> 
                    <p>
                    <div>Your predicted winner: <%=prediction.winner %></div> 
                    <div>Actual winner: <%=match.winner%></div>
                    <% if(prediction.winner === match.winner){ %> 
                        <% points += parseInt(process.env.winner_correct_points) %>
                        <div>You received <%= process.env.winner_correct_points %> points for this prediction</div>
                    <% } else { %> 
                        <% points += parseInt(process.env.winner_incorrect_points) %>
                        <div>You received <%= process.env.winner_incorrect_points %> points for this prediction</div>    
                    <% } %>
                    </p>
                    <p>
                    <% if(prediction.mom) { %> 
                        <div>Your predicted Man of the Match: <%=prediction.mom %></div> 
                        <div>Actual Man of the Match: <%=match.mom%></div>
                        <% if(prediction.mom === match.mom){ %> 
                            <% points += parseInt(process.env.mom_correct_points) %>
                            <div>You received <%= process.env.mom_correct_points %> points for this prediction</div>
                        <% } else { %> 
                            <% points += parseInt(process.env.mom_incorrect_points) %>
                            <div>You received <%= process.env.mom_incorrect_points %> points for this prediction</div>    
                        <% } %>
                    <% } else { %> 
                        <div>You did not predict Man of the Match for this match</div>    
                    <% } %>
                    </p>
                    <p>
                    <% if(prediction.first_inns_score){ %> 
                        <div>Your predicted first innings score: <%=prediction.first_inns_score%></div>
                        <div>Actual first innings score: <%=match.first_inns_score%></div>
                        <% let score_pts = evaluate_predicted_score(prediction.first_inns_score, match.first_inns_score)%>
                        <% points += score_pts %>
                        <div>You received <%= score_pts %> points for this prediction</div>
                    <% } else { %> 
                        <div>You did not predict first innings score for this match</div>    
                    <% } %>
                    </p>
                    <p>
                    <% let multiplier = 1 %>
                    <% if(prediction.double_used) { %> 
                        <% multiplier = 2 %>
                        <div>You used a Double for this prediction</div>
                    <% } else if(prediction.triple_used){ %> 
                        <% multiplier = 3 %>
                        <div>You used a Triple for this prediction</div>
                    <% } else if(prediction.superboost_used){ %> 
                        <% multiplier = 5 %>
                        <div>You used a Superboost for this prediction</div>
                    <% } else { %> 
                        <div>You did not use any multiplier for this prediction</div>
                    <% } %>
                    </p>
                    <div> Your total points for this match is <%=points%> * <%=multiplier%> = <%=points * multiplier%> </div>
                    
                <%} %>
                </div>
            <% }) %>
        </div>

        <div id="leaderboard" class="tab-pane">
            
            <table class="jumbotron" style="width: 100%;">
                <caption><h2>Leaderboard</h2></caption>
                <tr>
                    <th style="text-align: center">Rank</th>
                    <th style="text-align: center">User</th> 
                    <th style="text-align: center">Points</th>
                </tr>
                <% users.forEach(usr => { %>
                    <% if(usr.rank <= 10 || usr.user_id === user.user_id ){ %> 
                        <tr>
                            <td style="text-align: center"><%= usr.rank %></td>
                            <td><img src="<%= usr.avatar_url %>">&nbsp;<%= usr.name %></td>
                            <td style="text-align: center"><%= usr.score %></td>
                        </tr>
                    <% } %> 
                <% }) %>
            </table>
